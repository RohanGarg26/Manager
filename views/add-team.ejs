<%- include('includes/start.ejs') %>

<title>Add New Team</title>
</head>

<%- include('includes/header.ejs') %>

<main style="width: device-width">
  <table style="width: 100%">
    <tbody style="width: 100%">
      <tr>
        <%- include('includes/side-bar.ejs') %>
        <td style="text-align: center; padding-top: 15px">
          <h2>ADD NEW TEAM</h2>
        </td>
      </tr>
      <tr>
        <td>
          <form style="padding: 20px" action="/add-team" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="team">Team Name</label>
              <input type="text" class="form-control" id="team" name="team" placeholder="Enter Team Name">
            </div>
            <div class="form-group">
              <label for="teamDesc">Team Description</label>
              <input type="text" class="form-control" id="teamDesc" name="teamDesc"
                placeholder="Enter Team Description">
            </div>
            <div class="custom-file">
              <label class="custom-file-label" for="image">Choose Image</label>
              <input type="file" class="custom-file-input" id="image" name="image">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="btn btn-primary"
              style="margin-top: 15px; align-items: center; text-align: center">Submit</button>
          </form>
      </tr>
    </tbody>
  </table>
</main>

<%- include('includes/end.ejs') %>